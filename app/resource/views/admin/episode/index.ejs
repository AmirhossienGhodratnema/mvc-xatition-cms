<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">ثبت نامی کلاس‌ها</h3>
        <div class="">
            <div class="btn-group p-0 " role="group" aria-label="Basic example">
                <a href="/admin/episodes/create" class="btn rounded-2 btn-sm  btn-primary">ثبت نام</a>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <table class="table table-striped">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row "> 
                    <th  class="col-0">شماره</th>
                    <th class="col-4">نام‌ - نام‌خانوادگی</th>

                    <th class="col-3">کلاس</th>
                    <th class="col-4">تاریخ عضویت</th>
                    <th class="col-1">تنطیمات </th>
                </div>

            </tr>
        </thead>
        <tbody>
            
            <% if (episodes.docs.length > 0) { %>
                <% episodes.docs.forEach(item => { %>

                    <tr style="font-size: .9rem;" class="text-center">
                        <td><%= episodes.docs.indexOf(item) + 1 %></td>
                        <th><%= item.user.name + ' ' + item.user.lastName %> </th>
                        <td><%= item.course.title %></td>
                        <td><%= date(item.createdAt) %></td>
                        <td class="d-flex justify-content-center align-items-center">
                            <form class="btn-group p-0" action="/admin/episodes/distroy/<%= item.id %>?_method=DELETE" method="POST">

                                <div class="btn-group overflow-hidden rounded-1" role="group" aria-label="Basic example">
                                    <a href="/admin/episodes/edit/<%= item.id %>" class="btn  btn-sm btn-secondary">ویرایش</a>
                                    <button type="button " class="btn btn-sm btn-secondary">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else {   %>
                <tr class="bg-light">
                    <th colspan="12" class="text-center fw-bold p-3">موردی یافت نشد</th>
                </tr>
            <% } %> 
        </tbody>
    </table>
</div>
<%- include('./../../global/pagination.ejs' , {pagination: episodes}) %>