<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">ارزیابی</h3>
    </div>
    <hr class="my-4" />
    <table class="table table-striped">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row">
                    <th class="col-11">نام</th>
                    <th class="col-1">تنطیمات</th>
                </div>

            </tr>
        </thead>
        <tbody>
            <% if (episode.length > 0) { %>
                <% episode.forEach(item => { %>
                    <tr style="font-size: .9rem;" class="text-center">
                        <th><%= item.user.lastName ?  item.user.name + ' ' + item.user.lastName : item.user.name %> </th>
                        <td class="d-flex justify-content-center align-items-center">
                            <form class="btn-group p-0" action="/admin/assessment/create/<%= item.id %>" method="GET">
                                <div class="btn-group overflow-hidden rounded-1" role="group" aria-label="Basic example">
                                    <!-- <a href="/admin/buy/edit/<%# item.id %> " class="btn  btn-sm btn-secondary">ویرایش</a> -->
                                    <button type="submit" class="btn btn-sm btn-secondary">ارزیابی</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else {   %>
                <tr class="bg-light">
                    <th colspan="12" class="text-center fw-bold p-3">موردی یافت نشد</th>
                </tr>
            <% } %> 
        </tbody>
    </table>
</div>


 


<%- include('./../../global/pagination.ejs' , {pagination: episode}) %>

