<div>
    <div>
        <h4 class="mb-4">کاربر جدید</h4>
    </div>
    <hr/>

        <%- include(viewPath('resource/views/global/errors.ejs'))  %> 
    <form class="needs-validation" action="/admin/user/create" method="POST" novalidate>
        <div class="form-row">
            <div class="col-4 mb-2">
                <label class="mb-2" for="name">نام</label>
                <input type="text" class="form-control py-2" value="<%= old('name')  %>" name="name" id="name"
                    placeholder="امیرحسین" required>
                <div class="valid-feedback">
                    <small> بسیار عالی!</small>
                </div>
                <div class="invalid-feedback">
                    <small>ایمیل صحیح نیست !</small>
                </div>
            </div>

            <div class="col-4">
                <label class="mb-2" for="price">نام خانوادگی</label>
                <input type="text" class="form-control py-2" value="<%= old('lastName') %>" name="lastName"
                    id="lastName" required placeholder="قدرت‌نما">
                <div class="valid-feedback">
                    <small>بسیار عالی !</small>
                </div>
                <div class="invalid-feedback">
                    <small>پسورد الزامی است !</small>
                </div>
            </div>

            <div class="col-4">
                <label class="mb-2" for="date">ایمیل</label>
                <input type="email" class="form-control py-2" value="<%= old('email') %>" name="email"
                id="email" required placeholder="رمز‌عبور"/>
                <div class="valid-feedback">
                    <small>بسیار عالی !</small>
                </div>
                <div class="invalid-feedback">
                    <small>پسورد الزامی است !</small>
                </div>
            </div>

            

            <div class="col-4">
                <label class="mb-2" for="date">تاریخ</label>
                <input type="text" class="example1 form-control py-2" value="<%= old('date') %>" name="date"
                id="date" required placeholder="تاریخ تولد"/>
                <div class="valid-feedback">
                    <small>بسیار عالی !</small>
                </div>
                <div class="invalid-feedback">
                    <small>پسورد الزامی است !</small>
                </div>
            </div>

            <div class="col-4">
                <label class="mb-2" for="date">رمزعبور</label>
                <input type="text" class="form-control py-2" value="<%= old('password') %>" name="password"
                id="password" required placeholder="رمز‌عبور"/>
                <div class="valid-feedback">
                    <small>بسیار عالی !</small>
                </div>
                <div class="invalid-feedback">
                    <small>پسورد الزامی است !</small>
                </div>
            </div>
        </div>


        <div class="col-12 my-3 p-0">
            <button class="btn btn-primary" type="submit">ثبت</button>
        </div>
    </form>
</div>


