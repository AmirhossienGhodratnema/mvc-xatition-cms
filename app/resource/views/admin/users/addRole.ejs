<div>
    <div>
        <h4 class="mb-4">کاربر جدید</h4>
    </div>
    <hr/>

        <%- include(viewPath('resource/views/global/errors.ejs'))  %> 
    <form class="needs-validation" action="/admin/user/role/<%= user.id %> " method="POST" novalidate>
        <div class="form-row">
            <div class="bg-light w-100 p-2 rounded-2">
                <h4 class="fw-bold text-center">اطلاعات کاربر</h4 class="">
                <p class="fw-bold">کاربر : <%= user.name + ' ' + user.lastName %> </p>
                <p class="fw-bold">تاریخ عضویت : <%= date(user.createdAt)%></p>
                <p class="fw-bold">تاریخ تولد : <%= user.birth ? user.birth :  'خالی' %> </p>
                
            </div>
            <div class="form-group col-12 " style="direction: rtl;" >
                <label for="permission" style="margin-bottom: .5rem;">سطح دسترسی</label>
                <select id="permission" name="permission" class="form-control form-control-chosen" data-placeholder="انتخاب کنید" multiple>
                    <% roles.forEach(item => { %>
                        <option value="<%= item.id %>" <%= old('permissions', user.roles).indexOf(item.id) !== -1 ?'selected' : '' %> ><%= item.lable %></option>
                    <% }) %>
                </select>
            </div>



      
            <div class="col-12 my-3 p-0">
                <button class="btn btn-primary" type="submit">ثبت</button>
            </div>
        </div>
    </form>
</div>


