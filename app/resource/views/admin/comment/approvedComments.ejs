<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">کامنت‌های تایید شده</h3>
        <div class="">
            <div class="btn-group p-0 " role="group" aria-label="Basic example">
                <a href="/admin/comments" class="btn rounded-2 btn-sm btn-danger">کامنت‌ها تایید نشده</a>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <table class="table table-striped border">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row "> 
                    <th class="col-2">فرستنده</th>
                    <th class="col-2">کامنت</th>
                    <th class="col-2">دوره</th>
                    <th class="col-2">زمان</th>
                    <th class="col-1">تنطیمات </th>
                </div>

            </tr>
        </thead>
        <tbody>
            <% if (comments.docs.length > 0) { %>
                <% comments.docs.forEach(item => { %>
                    <br/>
                    <tr style="font-size: .9rem;" class="text-center ">
                        <td class="col-1"><%= item.user.name + ' ' + item.user.lastName %></td>
                        <th class="justify col-6 text-center"><%= item.description %> </th>
                        <th class="col-1"><%= item.course.title %> </th>
                        <th class="col-1"><%= date(item.createdAt) %></th>
                        <td class="col-3">
                            <form class="btn-group p-0" action="/admin/comments/distroy/<%= item.id %>?_method=DELETE" method="POST">
                                <div class="btn-group overflow-hidden rounded-1" role="group" aria-label="Basic example">
                                    <a href="/admin/comments/approved/<%= item.id %>" class="btn  btn-sm btn-secondary">پنهان</a>
                                    <button type="button " class="btn btn-sm btn-secondary">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else {   %>
                <tr class="bg-light">
                    <th colspan="12" class="text-center fw-bold p-3">موردی یافت نشد</th>
                </tr>
            <% } %> 
        </tbody>
    </table>
</div>
<%- include('./../../global/pagination.ejs' , {pagination: comments}) %>