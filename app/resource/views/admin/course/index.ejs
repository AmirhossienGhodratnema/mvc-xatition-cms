<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">کلاس‌ها</h3>
        <div class="">
            <div class="btn-group p-0 " role="group" aria-label="Basic example">
                <a href="/admin/courses/create" class="btn rounded-2 btn-sm  btn-primary">کلاس جدید</a>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <table class="table table-striped">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row "> 
                    <th  class="col-0">شماره</th>
                    <th class="col-5">نام کلاس</th>
                    <th class="col-5">شهریه</th>
                    <th class="col-2">تنطیمات </th>
                </div>

            </tr>
        </thead>
        <tbody>
            <% if (courses.docs.length > 0) { %>
                <% courses.docs.forEach(item => { %>
                    <tr style="font-size: .9rem;" class="text-center">
                        <td><%= courses.docs.indexOf(item) + 1 %></td>
                        <td><%= item.title %></td>
                        <td><%= item.price %> تومان</td>
                        <td class="d-flex justify-content-center align-items-center">
                            <form class="btn-group p-0" action="/admin/courses/distroy/<%= item.id %>?_method=DELETE" method="POST">
                                <div class="btn-group overflow-hidden rounded-1" role="group" aria-label="Basic example">
                                    <a href="/admin/episodes/<%= item.id %>" class="btn  btn-sm btn-secondary">اعضا</a>
                                    <a href="/admin/courses/edit/<%= item.id %>" class="btn  btn-sm btn-secondary">ویرایش</a>
                                    <button type="button " class="btn btn-sm btn-secondary">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else {   %>
                <tr class="bg-light">
                    <th colspan="12" class="text-center fw-bold p-3">موردی یافت نشد</th>
                </tr>
            <% } %> 
        </tbody>
    </table>
</div>



<%- include('./../../global/pagination.ejs' , {pagination: courses}) %>