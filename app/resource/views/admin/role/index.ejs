<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">اجازه دسترسی</h3>
        <div class="">
            <div class="btn-group p-0 " role="group" aria-label="Basic example">
                <a href="/admin/roles/create" class="btn rounded-2 btn-sm  btn-primary">اجازه دسترسی جدید</a>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <table class="table table-striped">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row">
                    <th class="col-5">نام</th>
                    <th class="col-5">لیبل</th>
                    <th class="col-2">تنطیمات </th>
                </div>
            </tr>
        </thead>
        <tbody>
            <% if (roles.docs.length > 0) { %>
                <% roles.docs.forEach(item => { %>
                    <tr style="font-size: .9rem;" class="text-center">
                        <td><%= item.name %></td>
                        <td ><%= item.lable %></td>

                        <td class="d-flex justify-content-center align-items-center">
                            <form class="btn-group p-0" action="/admin/roles/distroy/<%= item.id %>?_method=DELETE" method="POST">
                                <div class="btn-group overflow-hidden rounded-1" role="group" aria-label="Basic example">
                                    <a href="/admin/roles/edit/<%= item.id %>"class="btn  btn-sm btn-secondary">ویرایش</a>
                                    <button type="button " class="btn btn-sm btn-secondary">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else {   %>
                    <tr class="bg-light">
                        <th colspan="12" class="text-center fw-bold p-3">موردی یافت نشد</th>
                    </tr>
            <% } %> 
        </tbody>
    </table>
</div>


<%- include('./../../global/pagination.ejs' , {pagination: roles}) %>