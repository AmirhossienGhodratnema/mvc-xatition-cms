<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">پرداختی‌ها</h3>
        <!-- <div class="">
            <div class="btn-group p-0 " role="group" aria-label="Basic example">
                <a href="/admin/buy/create" class="btn rounded-2 btn-sm  btn-primary">خرید جدید</a>
            </div>
        </div> -->
    </div>
    <hr class="my-4" />
    <table class="table table-striped">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row">
                    <th class="col-3">پرداخت کننده</th>
                    <th class="col-3">کلاس</th>
                    <th class="col-3">وضعیت</th>
                    <th class="col-1">مبلغ</th>
                    <th class="col-2">تاریخ خرید</th>
                </div>

            </tr>
        </thead>
        <tbody>
            <% if (payment.docs.length > 0) { %>
                <% payment.docs.forEach(item => { %>
                    <tr style="font-size: .9rem;" class="text-center">
                        <th><%= item.user.name + ' ' +  item.user.lastName %> </th>
                        <td><%= item.course.title %></td>
                        <td class=" <%= item.payment ? 'text-success' : 'text-danger' %>"><%= item.payment ? 'پرداخت موفق'  : 'پرداخت ناموفق' %></td>
                        <td ><%= item.price %> ریال</td>
                        <td><%= getTime(item.createdAt) %></td>
                    </tr>
                <% }) %>
            <% } else {   %>
                <p>هیچ موردی یافت نشد</p>

            <% } %> 
            
        </tbody>
    </table>
</div>


 


<%- include('./../../global/pagination.ejs' , {pagination: payment}) %>

