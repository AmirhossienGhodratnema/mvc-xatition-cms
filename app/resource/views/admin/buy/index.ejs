<div>
    <div class="d-flex justify-content-between">
        <h3 class="fw-bold">خریدها</h3>
        <div class="">
            <div class="btn-group p-0 " role="group" aria-label="Basic example">
                <a href="/admin/buy/create" class="btn rounded-2 btn-sm  btn-primary">خرید جدید</a>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <table class="table table-striped">
        <thead>
            <tr class="fw-bolder text-center">
                <div class="row">
                    <th class="col-3">نام خریدار</th>
                    <th class="col-3">نام محصول یا عنوان</th>
                    <th class="col-2">قیمت ( تومان )</th>
                    <th class="col-2">تاریخ خرید</th>
                    <th class="col-1">تعداد / وزن</th>
                    <th class="col-1">تنطیمات </th>
                </div>

            </tr>
        </thead>
        <tbody>
            <% if (buy.docs.length > 0) { %>
                <% buy.docs.forEach(item => { %>
                    <tr style="font-size: .9rem;" class="text-center">
                        <th><%= item.user.name + ' ' +  item.user.lastName %> </th>
                        <td><%= item.name %></td>
                        <td ><%= item.price %></td>
                        <td><%= item.date %></td>
                        <td><%= item.number %></td>
                        <td class="d-flex justify-content-center align-items-center">
                            <form class="btn-group p-0" action="/admin/buy/distroy/<%= item.id %>?_method=DELETE" method="POST">

                                <div class="btn-group overflow-hidden rounded-1" role="group" aria-label="Basic example">
                                    <a href="/admin/buy/edit/<%= item.id %> " class="btn  btn-sm btn-secondary">ویرایش</a>
                                    <button type="button " class="btn btn-sm btn-secondary">حذف</button>
                                </div>

                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else {   %>
                <p>هیچ موردی یافت نشد</p>

            <% } %> 
            

            
            
        </tbody>
    </table>
</div>


 


<%- include('./../../global/pagination.ejs' , {pagination: buy}) %>

