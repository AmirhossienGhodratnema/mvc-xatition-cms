        <div class="col-xl-3">
            <div class="card w-100">



                <% if (auth.check) { %>
                    <% if (course.type == 'cash') { %>
                        <% if (auth.user.checkLearning(course.id)) { %>
                            <div class="card-body py-2 px-2">
                                <input type="hidden" name="course" value="<%= course.id %>">
                                <p class="justify">شما این دوره را خریداری‌ کرده‌اید</p>
                            </form>
                        </div>
                           
                        <% } else { %>
                            <div class="card-body py-2 px-2">
                                <form action="/course/payment" method="post">
                                    <input type="hidden" name="course" value="<%= course.id %>">
                                    <p class="justify">برای مشاهده این دوه باید آن را به مبلغ <%= course.price %> ریال خریداری کنید </p>
                                    <button class="btn btn-primary btn-sm">ورود</button>
                                </form>
                            </div>
                        <% } %> 
    
                    <% } else if(course.type == 'vip') {  %>
                        <% if (auth.user.isVip()) { %>
                         
                            <div class="card">
                                <div class="card-body py-2 px-2">
                                    <p class="justify">شما عضو ویژه هستید بنا براین میتوانید از این دوره استفاده کنید.</p>
                                    <a class="btn btn-primary btn-sm" href="/auth/login">ورود</a>
                                </div>
                           </div>


                        <% } else { %>
                       
                            <div class="card-body py-2 px-2">
                                    <input type="hidden" name="course" value="<%= course.id %> ">
                                    <p class="justify">برای مشاهده دوه از عضویت ویژه استفاده کنید.</p>
                                    <a class="btn btn-sm btn-primary" href="#">تهیه عضویت ویژه</a>
                                </form>
                            </div>

                        <% } %> 
    
                    <% } else { %>
                   

                        <div class="card">
                            <div class="card-body py-2 px-2">
                                <p class="justify">دوره بهصورت رایگان در دسترس شما قرار دارد.</p>
                            </div>
                       </div>

                    <% } %> 
    
                <% } else { %>
                   <div class="card">
                        <div class="card-body py-2 px-2">
                            <p class="justify">برای مشاهده این دوره باید وارد اکانت خود شوید.</p>
                            <a class="btn btn-primary btn-sm" href="/auth/login">ورود</a>
                        </div>
                   </div>
                <% } %> 





               
            </div>

            <div class="card mt-3">
                <div class="card-header fw-bold">
                    جستوجو
                </div>
                <div class="card-body">
                    <div class="input-group border rounded-3 overflow-hidden">
                        <input type="text" class="form-control border-0" id="inlineFormInputGroupUsername"
                            placeholder="دنبال چی میگردی؟">
                        <div class="input-group-prepend">
                            <button class="btn btn-secondary" type="submit">جستوجو</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header fw-bold">
                    دسته
                </div>
                <div class="card-body">
                    <ul class="row p-0">
                        <li class="col-6"><a href="#">Bootstrap</a></li>
                        <li class="col-6"><a href="#">React</a></li>
                        <li class="col-6"><a href="#">Frotn-end</a></li>
                        <li class="col-6"><a href="#">Css</a></li>
                        <li class="col-6"><a href="#">Html</a></li>
                        <li class="col-6"><a href="#">Mui</a></li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header fw-bold">
                    جزئیات
                </div>
                <div class="card-body d-flex justify-content-between fw-bold">
                    <p>بازدید‌ها : <%= course.viewCount  %></p>
                    <p>بارگیری : <%= date(course.createdAt)  %></p>
                </div>
            </div>
        </div>
