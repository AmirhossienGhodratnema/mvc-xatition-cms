            <%- include(viewPath('resource/views/global/comments.ejs'),  {subject : course})  %> 
       
            <hr class="text-secondary" />
            <%  course.comment.forEach(item => { %>
                <div class="d-flex align-items-start border rounded-1 mb-3">
                    <div class="d-flex flex-column w-100 m-4">
                        <div class="d-flex align-items-start">
                            <img src="https://mdbcdn.b-cdn.net/img/new/avatars/8.webp" class="rounded-circle mb-3" style="width: 60px;" alt="Avatar" />
                            <div class="w-100 justify mr-3">
                                <h5 class="mr-3 fw-bold"><%= item.user.name + ' ' + item.user.lastName %></h5>
                                <p class="mr-3"><%= item.description %></p>
                                    <% if (auth.check) { %>
                                        <button type="button" class="btn btn-primary btn-sm mt-3 border-0" data-toggle="modal" data-parent="<%= item.id %>" data-target="#exampleModal">پاسخ</button>
                                    <% } %>

                            </div>
                        </div>

                        <% if (item.comments.length > 0) { %>
                            <% item.comments.forEach(child => { %>
                                <hr class="text-secondary" />
                                <div class="d-flex align-items-start justify-content-end mt-3">
                                    <img src="https://mdbcdn.b-cdn.net/img/new/avatars/8.webp" class="rounded-circle mb-3"
                                        style="width: 60px;" alt="Avatar" />
                                    <div class=" justify mr-3" style="width: 80%;">
                                        <h5 class="mr-3 fw-bold"><%= child.user.name + ' ' + child.user.lastName %> </h5>
                                        <p class="mr-3"><%= child.description %> </p>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>

                    </div>
                </div>
            <% }) %>
