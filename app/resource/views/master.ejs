<% let sweetalert = req.flash('sweetalert')
    if(sweetalert.length) {
    let data = sweetalert[0]; %>
    <script>
        
        Swal.fire({
            title: '<%= data.title %>',
            text: '<%= data.message %>',
            icon: '<%= data.icon %>',
            showConfirmButton: <%= data.button !== null ? true : false %>,
            confirmButtonText: '<%= data.button %>',
            timer : <%= data.button !== null ? 'null' : data.timer %>,
        })
    </script>
<% } %>



    




