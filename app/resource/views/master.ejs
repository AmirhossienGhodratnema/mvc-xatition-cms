                <span class="navbar-toggler-icon"></span>
            </button>
    
            <div class=" position-relative collapse navbar-collapse justify-content-center" style="font-weight:800;"
                id="navbarSupportedContent">
               
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-center" href="<%= req.originalUrl == '/' ? '#home': '/#home' %>">خانه</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="<%= req.originalUrl == '/' ? '#class': '/#class' %>">کلاس‌ها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="<%= req.originalUrl == '/' ? '#calendar': '/#calendar' %>">برنامه‌کلاسی</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="#">درباره‌ما</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="#">تماس‌با‌ما</a>
                    </li>
                </ul>
    
                <%# auth.user && auth.user.email %> 
    
                <% if(auth.check){ %>
                    <div class="btnAcc">
                        <% if (auth.user && auth.user.admin) { %>
                            <a href="/admin" class="btn btn-outline-warning btn-sm">ادمین</a>
                        <% } %>
                        <a href="/user-panel" class="btn btn-outline-success btn-sm">پنل کاربری</a>
                        <a href="/logout" id="test" class="btn btn-outline-danger btn-sm">خروج</a>
                    </div>
                  <% } else{ %>  
                    <div class="btnAcc">
                        <a href="/auth/login" class="btn btn-outline-info  btn-sm">ورود</a>
                        <a href="/auth/register" class="btn btn-info btn-sm">ثبت‌نام</a>
                    </div>
                 <% } %>
            </div>
        </nav>
    </header>


