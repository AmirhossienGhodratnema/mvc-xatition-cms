<div class="container mt-4 mb-5">
    <div class="row">
        <% courses.docs.forEach(course => { %>
            <div class="col-xl-3 mb-4 d-flex">
                <div class="card overflow-hidden">
                    <div class="overflow-hidden">
                        <img class="card-img-top p-2 animationImage" src="<%= course.thumbnail %> " alt="Card image cap">
                    </div>

                    <div class="card-body py-1 border-top">
                        <p class="card-text pb-1 overflow-hidden justify textBodyCourse">
                            <%= course.body %>
                        </p>
                    </div>

                    <a href="/courses/single/<%= course.id %> " class="btn btn-success btn-sm m-2">ادامه</a>

                    <div class="card-footer  py-1 pb-2 ">
                        <div class="d-flex align-items-center justify-content-between">
                           <% if (course.type == 'vip') { %>
                                <p class="mb-2">دسترسی برای اعضای ویژه</p>
                                <svg xmlns="http://www.w3.org/2000/svg" color="green" width="20" height="20" fill="currentColor" class="bi bi-award" viewBox="0 0 16 16">
                                    <path d="M9.669.864 8 0 6.331.864l-1.858.282-.842 1.68-1.337 1.32L2.6 6l-.306 1.854 1.337 1.32.842 1.68 1.858.282L8 12l1.669-.864 1.858-.282.842-1.68 1.337-1.32L13.4 6l.306-1.854-1.337-1.32-.842-1.68L9.669.864zm1.196 1.193.684 1.365 1.086 1.072L12.387 6l.248 1.506-1.086 1.072-.684 1.365-1.51.229L8 10.874l-1.355-.702-1.51-.229-.684-1.365-1.086-1.072L3.614 6l-.25-1.506 1.087-1.072.684-1.365 1.51-.229L8 1.126l1.356.702 1.509.229z"/>
                                    <path d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z"/>
                                </svg>
                           <% } else if(course.type == 'cash') { %>
                                <p class="mb-2">خریدنی</p>
                                <svg xmlns="http://www.w3.org/2000/svg" color="green" width="22" height="22" fill="currentColor" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                                    <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
                                </svg>
                           <% } else { %>
                                <p class="mb-2">رایگان</p>
                                <svg xmlns="http://www.w3.org/2000/svg" color="green" width="30" height="30" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                           <% } %> 
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <span>
                                قیمت : <%= course.price %> تومان
                            </span> 
                            <span style="font-size: .8rem;">
                                تاریخ : <%= date(course.createdAt)  %>
                            </span> 
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>



