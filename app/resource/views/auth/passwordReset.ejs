    <div class="col-xl-3 col-lg-4 col-md-5 col-sm-10 col-10">
        <div class="card mb-5">
            <div class="card-body p-0">
                <div class="card-header">
                    <h5 class="text-center fw-bold">تایید پسورد جدید</h5>
                </div>
                <%- include(viewPath('resource/views/global/errors.ejs'))  %> 
                <div class="colorLogo iconResetPass d-flex justify-content-center  position-relative m-0">
                    <svg  xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                        <path d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z"/>
                    </svg>

                    <svg class="downIcon" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                        <path d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z"/>
                    </svg>
                </div>

                <form class="needs-validation p-3 pt-0" action="/auth/register-password" method="POST" novalidate>
                    <input type="hidden" name="token" id="token"  value="<%= token %>" required>
                    <div class="form-row">
                        <div class="col">
                            <label class="mb-2" for="email">ایمیل شما</label>
                            <input type="email" class="form-control py-2" value="<%= old('email') %>" name="email" id="email" placeholder="amirhosseinghodratnemaWork@gmail.com" required
                                pattern=".{5,}">
                            <div class="valid-feedback">
                                <small> بسیار عالی!</small>
                            </div>
                            <div class="invalid-feedback">
                                <small>ایمیل را به درستی وارد کنید !</small>
                            </div>
                        </div>
                    </div>

                    <div class="col  my-2">
                        <label class="mb-2" for="password">پسورد جدید</label>
                        <input type="password" class="form-control py-2" value="<%= old('password') %>" name="password" id="password"
                            pattern=".{9,}" required>
                        <div class="valid-feedback">
                            <small>بسیار عالی !</small>
                        </div>
                        <div class="invalid-feedback">
                            <small>پسورد الزامی است ( بیشتر از 8 کاراکتر ) !</small>
                        </div>
                    </div>

                    <div class="col">
                        <label class="mb-2" for="confPassword">تایید پسورد</label>
                        <input type="password" class="form-control py-2" value="<%= old('confPassword') %>" name="confPassword" id="confPassword"
                            pattern=".{9,}" required>
                        <div class="valid-feedback">
                            <small>بسیار عالی !</small>
                        </div>
                        <div class="invalid-feedback">
                            <small>تایید پسورد الزامی است ( بیشتر از 8 کاراکتر ) !</small>
                        </div>
                    </div>

                    <div class="col-12 my-3">
                        <button class="btn btn-primary">ریست</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>